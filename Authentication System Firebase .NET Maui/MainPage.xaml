<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTestApp.MainPage">

    <Grid RowDefinitions=".25*, .1*, .05*, .05*, .2*, .1*, .2*, .1*"
        ColumnDefinitions=".2*, .2*, .2*, .2*, .2*">

        <Image Grid.ColumnSpan="5"
               Source="dotnet_bot.png"
               BackgroundColor="MediumPurple" />
        <Button Text="Get Started"
                x:Name="GetStartedButton"
                Grid.ColumnSpan="3"
                Grid.Row="5"
                Grid.Column="1"
                SemanticProperties.Hint="Go to the Login Page"
                Clicked="OnGetStartedClicked" />
        <Label Text="Copyright 2023 Zack Joyce"
              FontSize="10"
              Grid.ColumnSpan="3"
              Grid.Row="7"
              Grid.Column="1"
              HorizontalOptions="CenterAndExpand" 
              VerticalOptions="CenterAndExpand" />
    </Grid>

</ContentPage>
